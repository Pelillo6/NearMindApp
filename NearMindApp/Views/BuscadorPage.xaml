<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NearMindApp.Views.BuscadorPage"
             Title="Buscador"
             IconImageSource="search.svg">
    <StackLayout Padding="10">
        <Label Text="Lista de Usuarios" 
               FontSize="20" 
               HorizontalOptions="Center" />

        <CollectionView x:Name="UsuariosCollectionView" 
                        SelectionMode="Single" 
                        SelectionChanged="OnUsuarioSeleccionado">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding nombre}" 
                               FontSize="16" 
                               VerticalOptions="Center" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Cargar Usuarios"
                HorizontalOptions="Center"
                Clicked="OnCargarUsuariosClicked" />
    </StackLayout>
</ContentPage>