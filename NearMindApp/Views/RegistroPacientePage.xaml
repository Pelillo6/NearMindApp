<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NearMindApp.Views.RegistroPacientePage"
             NavigationPage.HasNavigationBar="False">

    <Grid >
        <Image Source="fondo_home.png"
       Aspect="AspectFill"
       Opacity="0.8" />

        <Frame BackgroundColor="White"
           CornerRadius="30"
           Margin="20"
           HasShadow="True"
           VerticalOptions="Center">

            <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="15">

                <Label Text="NearMind"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#53518C"/>

                <Label Text="Nombre completo"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10">
                    <Entry x:Name="Nombre"/>
                </Frame>

                <Label Text="Correo electrónico"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10"  >
                    <Entry x:Name="Correo"/>
                </Frame>

                <Label Text="Contraseña"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10"  >
                    <Entry x:Name="Contraseña"
                       IsPassword="True"/>
                </Frame>

                <Label Text="Fecha de nacimiento"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10"  >
                    <DatePicker x:Name="FecNacimiento"
                            Format="dd/MM/yyyy" />
                </Frame>

                <Label Text="Numero de teléfono"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10"  >
                    <Entry x:Name="Telefono"/>
                </Frame>

                <Label Text="Ubicación"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   TextColor="#53518C"
                   Padding="5,0,0,0"/>

                <Frame BorderColor="#6F6CCB" 
                   CornerRadius="10" 
                   Padding="5,0,5,-10"  >
                    <Entry x:Name="Ubicacion"/>
                </Frame>

                <Label x:Name="MensajeLabel" 
                   FontSize="11"
                   TextColor="Red"/>

                <Button Text="Registrarse"
                    Clicked="OnRegistrarClicked"
                    BackgroundColor="#ED8A6C"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    WidthRequest="150"/>

                <Label Text="¿Ya tienes cuenta? Inicia sesión"
                   TextColor="#53518C"
                   HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnIniciarSesionClicked" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>