<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NearMindApp.Views.PerfilPage"
             NavigationPage.HasNavigationBar="False"
             IconImageSource="user.svg">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="NearMind"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#53518C"/>

        <Grid VerticalOptions="Center" HorizontalOptions="Center" ColumnDefinitions="Auto,Auto">
            <Frame HeightRequest="100"
                   WidthRequest="100"
                   CornerRadius="50"
                   Padding="20"
                   BackgroundColor="#D3CFEE">
                <Image x:Name="ImagenPerfil"
                       Source="user.svg"
                       Aspect="AspectFill"/>
            </Frame>
            <Button ImageSource="edit.svg"
                    Clicked="OnChangeProfileImageClicked"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Padding="12"
                    CornerRadius="20"
                    Margin="-20,0,0,0"
                    Grid.Column="1"
                    BackgroundColor="#D3CFEE"/>
        </Grid>
        
        <Label Text="Nombre:" />
        <Entry x:Name="NombreEntry" Placeholder="Nombre" />

        <Label Text="Correo Electr칩nico:" />
        <Entry x:Name="CorreoEntry" Placeholder="Correo Electr칩nico" Keyboard="Email" />

        <Label Text="Contrase침a:" />
        <Entry x:Name="PasswordEntry" Placeholder="Contrase침a" IsPassword="True" />

        <Button Text="Guardar Cambios" Clicked="OnGuardarCambiosClicked" />

        <Label x:Name="MensajeLabel" TextColor="Green" IsVisible="False" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>